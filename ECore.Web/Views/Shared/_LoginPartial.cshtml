@using Microsoft.AspNetCore.Identity
@using ECore.Domain.Entities;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link active" asp-action="Logout" asp-controller="Account">
        <i class="fa fa-user-circle-o"> Выйти</i></a>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success mt-1">@TempData["message"]</div>
    }
}
else
{
    <a class="nav-link active" asp-controller="Account" asp-action="Login">
        <i class="fa fa-user-circle-o"> Войти</i>
    </a>
}
